{
  "private": true,
  "scripts": {
    "start": "browser-sync start --server src/flexbox --no-notify --no-ui --cwd src/flexbox --files index.html,styles/*",
    "test": "editorconfig-checker",
    "html": "html-minifier --remove-comments --collapse-whitespace --input-dir src/flexbox --output-dir dist --file-ext html",
    "styles": "postcss src/flexbox/styles/index.css --use postcss-import --use postcss-csso --no-map --output dist/styles/index.css",
    "build": "npm run html && npm run styles",
    "validate": "node-w3c-validator -i ./src/*/*.html -f html -o ./reports/result.html -s",
    "serve": "serve"
  },
  "devDependencies": {
    "browser-sync": "^2.26.7",
    "editorconfig-checker": "^3.1.0",
    "html-minifier": "^4.0.0",
    "postcss-cli": "^7.1.1",
    "postcss-csso": "^4.0.0",
    "postcss-import": "^12.0.1"
  },
  "dependencies": {
    "node-w3c-validator": "^2.0.1",
    "serve": "^13.0.2"
  }
}
